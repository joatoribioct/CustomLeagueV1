<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_usuario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/iv_perfil_usuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/default_user_avatar"
            android:scaleType="centerCrop"
            android:background="@drawable/background_circulo_usuario" />

        <!-- InformaciÃ³n del usuario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Usuario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_email_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="usuario@email.com"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_estado_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢ Activo"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Checkbox de selecciÃ³n -->
        <CheckBox
            android:id="@+id/checkbox_seleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:buttonTint="#4CAF50" />

    </LinearLayout>

</androidx.cardview.widget.CardView>