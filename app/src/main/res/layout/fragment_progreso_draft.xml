<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".Fragmentos.FragmentProgresoDraft">

    <!-- Header del Progreso -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_header_background"
            android:padding="16dp">

            <!-- TÃ­tulo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/white" />

                <TextView
                    android:text="ðŸ“Š Progreso del Draft"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Estado del Draft -->
            <TextView
                android:id="@+id/tvEstadoDraft"
                android:text="â³ Cargando estado del draft..."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- EstadÃ­sticas -->
            <TextView
                android:id="@+id/tvEstadisticasDraft"
                android:text="ðŸ“Š Participantes: 0 | Selecciones: 0/0"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Botones de ExportaciÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopiarProgreso"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="ðŸ“‹ Copiar"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompartirWhatsapp"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="ðŸ’¬ WhatsApp"
            android:textSize="12sp"
            android:backgroundTint="#25D366"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Lista de Participantes -->
    <TextView
        android:text="ðŸ‘¥ Participantes y sus Selecciones"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- RecyclerView del Progreso -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProgresoParticipantes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        tools:listitem="@layout/item_progreso_participante" />

</androidx.appcompat.widget.LinearLayoutCompat>