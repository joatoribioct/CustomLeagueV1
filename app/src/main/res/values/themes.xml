<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CustomLeagueBeisbol" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- CORREGIDO: Usar colores que SÍ existen en colors.xml -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema final de la aplicación -->
    <style name="Theme.CustomLeagueBeisbol" parent="Base.Theme.CustomLeagueBeisbol" />

    <!-- Tema para la Splash Activity (CORREGIDO) -->
    <style name="Theme.CustomLeagueBeisbol.Splash" parent="Theme.SplashScreen">
        <!-- CORREGIDO: Usar colores que SÍ existen -->
        <item name="windowSplashScreenBackground">@color/purple_500</item>

        <!-- CORREGIDO: Usar icono que existe o comentar si no existe -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_leguebeisbol</item>

        <!-- Duración de la animación del icono -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>